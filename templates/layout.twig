{# templates/layout.twig #}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Gym Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
    <a class="navbar-brand" href="/">Gym Management</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav me-auto">
    <li class="nav-item">
    <a class="nav-link" href="{{ url_for('home') }}">Home</a>
    </li>
    <li class="nav-item">
    <a class="nav-link" href="{{ url_for('mitglieder-liste') }}">Mitglieder</a>
    </li>
    <li class="nav-item">
    <a class="nav-link" href="{{ url_for('kurse-liste') }}">Kurse</a>
    </li>
    <li class="nav-item">
    <a class="nav-link" href="{{ url_for('trainingsplan-liste') }}">Trainingspl√§ne</a>
    </li>
    </ul>
    <ul class="navbar-nav">
    {% if session.benutzer_id is defined %}
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle me-1"></i>{{ session.benutzer_name ?? 'Mein Konto' }}
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="{{ url_for('benutzer-profil') }}"><i class="fas fa-id-card me-2"></i>Profil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="{{ url_for('benutzer-logout') }}"><i class="fas fa-sign-out-alt me-2"></i>Abmelden</a></li>
            </ul>
        </li>
    {% else %}
        <li class="nav-item">
            <a class="nav-link btn btn-outline-light btn-sm px-3 py-1 mt-1" href="{{ url_for('benutzer-login') }}">
                <i class="fas fa-sign-in-alt me-1"></i>Anmelden
            </a>
        </li>
    {% endif %}
    </ul>
    </div>
    </div>
</nav>

<div class="container">
    {% block content %}{% endblock %}
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>