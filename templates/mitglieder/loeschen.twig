{# mitglieder/loeschen.twig #}

<h1>{{ titel }}</h1>

{% if erfolg %}
    <p class="meldung erfolg">Mitglied erfolgreich gelöscht!</p>
    <p><a href="{{ url_for('mitglieder-liste') }}">Zurück zur Mitgliederliste</a></p>
{% else %}
    <div class="meldung {{ fehlertyp }}">
        <p>{{ nachricht }}</p>
        <p>Bitte überprüfe die ID und versuche es erneut oder kontaktiere den Support.</p>
    </div>
    <p><a href="{{ url_for('mitglieder-liste') }}">Zurück zur Mitgliederliste</a></p>
{% endif %}