{# templates/mitglieder/details.twig #}
{% extends "layout.twig" %}

{% block content %}
    <h1>{{ title }}</h1>
    
 

    {% if mitglied %}
    <div class="card">
        <div class="card-header">
            {{ mitglied.vorname }} {{ mitglied.nachname }}
        </div>
        <div class="card-body">
            <p><strong>Mitglieds ID:</strong> {{ mitglied.mitglied_id }}</p> {# Annahme, dass die ID so heißt #}
            <p><strong>Email:</strong> {{ mitglied.email }}</p>
            <p><strong>Geburtsdatum:</strong> {{ mitglied.geburtsdatum }}</p>
            <p><strong>Beitrittsdatum:</strong> {{ mitglied.beitrittsdatum }}</p>
            <p><strong>Mitgliedschaft:</strong> {{ mitglied.mitgliedschaft_typ }}</p>
        </div>
        <div class="card-footer">
            <a href="{{ url_for('mitglied-bearbeiten', {'id': mitglied.mitglied_id}) }}" class="btn btn-primary btn-sm">Bearbeiten</a>
            <a href="{{ url_for('mitglieder-liste') }}" class="btn btn-secondary btn-sm">Zurück zur Liste</a>
            {# Hier könnte auch der Löschen-Button sein, falls nicht schon woanders platziert #}
            {# <a href="{{ url_for('mitglied-loeschen', {'id': mitglied.mitglied_id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Sind Sie sicher, dass Sie dieses Mitglied löschen möchten?');">Löschen</a> #}
        </div>
    </div>
    {% else %}
        <div class="alert alert-warning" role="alert">
          Mitglied nicht gefunden.
        </div>
        <a href="{{ url_for('mitglieder-liste') }}" class="btn btn-secondary">Zurück zur Liste</a>
    {% endif %}
{% endblock %}